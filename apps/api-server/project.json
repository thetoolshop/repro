{
  "name": "@repro/api-server",
  "targets": {
    "watch": {
      "executor": "nx:run-script",
      "options": {
        "script": "dev-watch"
      },
      "dependsOn": ["^build"]
    },
    "serve": {
      "executor": "nx:run-script",
      "options": {
        "script": "start"
      },
      "dependsOn": ["^build"]
    },
    "start-mailpit": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mailpit"
      }
    }
  },
  "tags": ["type:app", "build:docker"],
  "services": [
    "admin-api-server",
    "api-server",
    "public-api-server"
  ]
}
