{
  "name": "@repro/api-server",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run clean && concurrently npm:build:source npm:build:declarations",
    "build:declarations": "tsc --project tsconfig.json --emitDeclarationOnly",
    "build:source": "./scripts/build",
    "clean": "rimraf dist",
    "dev-resources:start": "s3rver -p 9000 -d ./s3_data --no-vhost-buckets --configure-bucket resources",
    "migrate": "ts-eager src/migrate.ts",
    "start": "ts-eager src/main.ts",
    "watch": "nodemon"
  },
  "license": "UNLICENSED",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.295.0",
    "@repro/domain": "workspace:*",
    "@repro/typed-binary-encoder": "workspace:*",
    "@repro/validation": "workspace:*",
    "@repro/wire-formats": "workspace:*",
    "bcrypt": "^5.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-winston": "^4.2.0",
    "fluture": "^14.0.0",
    "handlebars": "^4.7.7",
    "jose": "^4.8.3",
    "monet": "^0.9.3",
    "nodemailer": "^6.9.1",
    "paddle-sdk": "^3.0.0",
    "pg": "^8.7.3",
    "pg-copy-streams": "^6.0.4",
    "pg-hstore": "^2.3.4",
    "pg-query-stream": "^4.2.4",
    "ramda": "^0.28.0",
    "rxjs": "^7.8.0",
    "winston": "^3.8.2",
    "zod": "^3.17.10"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^18.6.2",
    "@types/nodemailer": "^6.4.7",
    "@types/pg": "^8.6.5",
    "@types/pg-copy-streams": "^1.2.1",
    "@types/ramda": "^0.28.15",
    "concurrently": "^7.3.0",
    "node-pg-migrate": "^6.2.2",
    "nodemon": "^2.0.19",
    "rimraf": "^3.0.2",
    "s3rver": "^3.7.1",
    "ts-eager": "^2.0.2",
    "tsc-alias": "^1.8.6",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.9.4"
  },
  "nodemonConfig": {
    "watch": [
      "dist/"
    ]
  },
  "nx": {
    "targets": {
      "watch": {
        "dependsOn": [
          "^build"
        ]
      }
    }
  }
}
