{
  "manifest_version": 3,
  "name": "Repro",
  "description": "The developer tool for replayable bug reports. Debug faster and ship defect-free software to your users.",
  "version": "1.1",
  "icons": {
    "128": "logo-128.png",
    "48": "logo-48.png",
    "32": "logo-32.png",
    "16": "logo-16.png"
  },
  "action": {
    "default_title": "Repro"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["<all_urls>"],
      "run_at": "document_start"
    }
  ],
  "permissions": ["storage", "tabs"],
  "web_accessible_resources": [
    {
      "resources": ["capture.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
