#!/usr/bin/env bash

set -euo pipefail

project_dir=$(realpath "$(dirname $0)/..")
source_dir="$project_dir/src/apps/devtools"
build_dir="$project_dir/dist/standalone-devtools"

cmd="build"

while getopts "s" param; do
  case "$param" in
    s) cmd="serve";;
  esac
done

mkdir -p "$build_dir"

cp -r $source_dir/static/* $build_dir/

eval "npx webpack $cmd --config webpack.standalone.config.js"
