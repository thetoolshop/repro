#!/usr/bin/env bash

set -euo pipefail

project_dir=$(realpath "$(dirname $0)/..")
source_dir="$project_dir/src/apps/chrome-extension"
build_dir="$project_dir/dist/chrome-extension"

flags="--bundle --outdir=$build_dir"
watch=false

entries="\
background=background.ts \
content=content/index.ts \
devtools=../devtools/embedded.tsx"

while getopts "w" param; do
  case "$param" in
    w) watch=true;;
  esac
done

if [ "$watch" = true ]; then
  flags="$flags --watch"
else
  # TODO: use Terser for improved minification
  flags="$flags --minify --sourcemap"
fi

mkdir -p "$build_dir"

cp -r $source_dir/static/* $build_dir/

eval "(cd $source_dir && npx esbuild $entries $flags)"
